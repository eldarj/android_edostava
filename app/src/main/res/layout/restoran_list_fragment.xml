<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="ListaRestorana"
    android:id="@+id/fragmentRestoranListContainer">

    <TextView
        android:id="@+id/textNemateOmiljenih"
        android:text="Niste niti jedan restoran dodali u omiljene."
        android:gravity="center"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progressBar_restoraniList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ListView
        style="@style/AppTheme.NoDivider"
        android:id="@+id/listViewRestorani"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="true">
    </ListView>


</RelativeLayout>