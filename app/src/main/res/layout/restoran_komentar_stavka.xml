<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_regular"
    android:paddingTop="@dimen/padding_regular">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageRestoranKomentarUserImg"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/margin_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_regular"
        android:layout_marginRight="@dimen/margin_small">

        <TextView
            android:id="@+id/textRestoranKomentarSuper"
            android:text="\@eldar 15.9.2018 20:31"
            android:layout_width="match_parent"
            android:textSize="@dimen/stavka_super_textsize"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textRestoranKomentarUsername"
            android:text="First Line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textRestoranKomentar"
            android:text="Datum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>