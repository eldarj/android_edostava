<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eldar.fit.seminarski.fragments.KorisnikPretragaDialogFragment"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <SearchView
        android:id="@+id/searchViewPretraga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:iconifiedByDefault="false"
        android:hint="Ime i prezime"/>

    <LinearLayout
        android:id="@+id/containerPretragaList"
        android:orientation="vertical"
        android:layout_below="@id/searchViewPretraga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listViewPretraga"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </ListView>

    </LinearLayout>

</RelativeLayout>